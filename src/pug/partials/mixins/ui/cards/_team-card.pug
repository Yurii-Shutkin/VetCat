mixin team-card(content)
    .team-card
        .team-card__photo-wrap
            .team-card__photo-info-block 
                img(src=content.photoUrl, alt='Фото специалиста')
                .shedule
                    p Ближайшие приемы
                    span.text1=content.data1
                    span.text2=content.data2
        .team-card__about-block 
            a(href="/employee") 
                .team-card__name
                    h5=content.name 
                .team-card__position 
                    span.team-card__position-text=content.position
