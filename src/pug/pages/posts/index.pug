extends ../../partials/components/main-layout/main-layout.pug
include ../../partials/mixins/ui/_segment-buttons.pug


block head
    include ../../partials/mixins/_head.pug
    +head('posts')

block content
    include ../../partials/components/svg-arrow/_svg-arrow.pug
    .advisable__wrap 
        include ../../partials/mixins/_hero.pug
        +hero(hero.advisable.title)
            .breadcrumbs
                a(href="/") Главная 
                <svg class="icon">
                    <use href="#icon-arrow"></use>
                </svg>
                a.current-page(href="/posts") Статьи
        .advisable__segments 
            .container-content
                +segment-buttons()
                    a(href="/stories").segment-item(data-tab='stories')
                        | Истории пациентов
                    a(href="/posts").segment-item.segment-item--active(data-tab='posts')
                        | Статьи
    include ./posts.pug
    include ../../partials/components/footer/footer.pug
